# Environment Configuration Template
# Copy this file to .env.development, .env.production, or .env.test
# Based on your environment needs

# ============================================
# Database Configuration
# ============================================
# For Development/Test: Use Docker database
POSTGRES_USER=chomyn_dev
POSTGRES_PASSWORD=dev_password_seguro
POSTGRES_DB=chomyn_odonto

# For Production: Use Neon database connection string
# DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# For Development/Test: Use Docker connection
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?schema=public"

# ============================================
# NextAuth Configuration
# ============================================
NEXTAUTH_URL="http://localhost:3000"
AUTH_SECRET="your-secret-key-change-this"

# ============================================
# Cloudinary Configuration
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_BASE_FOLDER=chomyn/dev

# ============================================
# Feature Flags
# ============================================
RECEP_EXPORT_PDF=false
NEXT_PUBLIC_RECEP_EXPORT_PDF=false
AUDIT_ENABLED=true
